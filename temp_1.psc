Algoritmo SUMA_RESTA_MULTIPLICACION_DIVICION
	Escribir "INGRESAR PRIMER NUMERO"
	Leer N1;
	
	Escribir "INGRESAR SEGUNDO NUMERO"
	Leer N2
	
	sum<- n1+n2
	rest<- n1-n2
	multi<- n1*n2
	div<- n1/n2
	
	Escribir "LA SUMA ES IGUAL A = ", SUM;
	Escribir "LA RESTA ES IGUAL A = ", REST;
	Escribir "LA MULTIPLICACION ES IGUAL A = ", multi;
	Escribir "LA DIVISION ES IGUAL A = ", div;
	
	Escribir "SALUDOS CORDIALES TONY!"
	
FinAlgoritmo
